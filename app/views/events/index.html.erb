<section class="page-section" id="event-card">
<%= link_to "New Evevent", new_event_path, class: "btn btn-primary" %>
  <!-- Page Content -->
  <div class="container">
    <h1 class="my-4">Events</h1>
    <div class="row">
      <div class="col-lg-4 col-sm-6 portfolio-item">

        <% @events.each do |event| %>
        <%= link_to event do %>
          <div class="card h-100">
            <%= image_tag "aloe_blacc.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= event.title %></a>
              </h4>
              <p class="card-text"><%= event.description %></p>
            </div>
            <div class="card-footer">
              <div class="row">
                <div class="col-sm-6">
                  <i class="fas fa-ticket-alt">
                    <%= event.event_tickets %></i>
                </div>
                <div class="col-md-6 ">
                  <i class="fas fa-dollar-sign float-right">
                    Valor</i>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
<% end %>
</section>


