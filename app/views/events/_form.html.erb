<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <%= simple_form_for(@event) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title%>
        <%= f.input :description %>
        <%= f.input :event_tickets %>
        <%= f.input :begin, required: true %>
        <%= f.input :end, required: true %>
        <% f.association :user %>
      </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
