<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-lg-8">

      <%= simple_form_for @event, url: events_path, class: "form-style-9" do |f| %>
      <%= f.error_notification %>
      <ul>
        <li>
          <%= f.input :title , class: "field-style field-split align-left form-control"%></li>
        <li><%= f.input :description , class: "form-control field-style field-full align-none" %></li>
        <li><%= f.input :tickets , as: :numeric, class: "form-control field-style align-right"%></li>

        <li><%= f.input :main_img , class: "form-control form-control field-style field-split align-right"%></li>
        <br>
        <li>
          <%= f.button :submit, class: "btn-primary" %>
          <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
        </li>
      </ul>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>
</div>
